<?link rel="stylesheet" type="text/css" href="/less/combobutton.css.dsp"?>
<?page title="Combobutton" contentType="text/html;charset=UTF-8"?>
<zk>
	<hlayout>
		<window title="Combobutton" border="normal" hflex="1" height="300px">
			<combobutton label="Combobutton Popup" image="/common/img/volumn.gif">
				<popup>
					Popup Content
				</popup>
			</combobutton>
			<separator />
			<combobutton label="Combobutton Menupopup" image="/common/img/volumn.gif">
				<menupopup>
					<menuitem label="Index" />
					<menu label="About">
						<menupopup>
							<menuitem label="About ZK" />
							<menuitem label="About Potix" />
						</menupopup>
					</menu>
				</menupopup>
			</combobutton>
			<separator />
			<combobutton label="Disabled Combobutton" disabled="true" image="/common/img/volumn.gif">
			</combobutton>
		</window>
		<window title="Combobutton mold=toolbar" border="normal" hflex="2" height="300px">
			<toolbar>
				<combobutton label="Combobutton" image="/common/img/volumn.gif" mold="toolbar">
					<menupopup>
						<menuitem label="Index" />
						<menu label="About">
							<menupopup>
								<menuitem label="About ZK" />
								<menuitem label="About Potix" />
							</menupopup>
						</menu>
					</menupopup>
				</combobutton>
				<combobutton label="Disabled Combobutton" disabled="true" image="/common/img/volumn.gif" mold="toolbar">
					<menupopup>
						<menuitem label="Index" />
						<menu label="About">
							<menupopup>
								<menuitem label="About ZK" />
								<menuitem label="About Potix" />
							</menupopup>
						</menu>
					</menupopup>
				</combobutton>
				<toolbarbutton label="ToolbarButton" iconSclass="z-icon-gear" mode="toggle" />
			</toolbar>
		</window>
	</hlayout>
</zk>
